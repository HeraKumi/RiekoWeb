extends ../layout

block content
    .page-header
        h1 #{title}
    .article
        table.table
            tr Novels
                th Cover
                th Name
                th Summary
                th Link
            each i in novel
                tr
                    td #[img(src=i.novelCoverArt, width='100', height='150')]
                    td #{i.novelName}
                    td #{i.novelSummary.substring(0,150)}... #[btn.btn.btn-info(href='/novels/add') Edit Novel] #[btn.btn.btn-danger Delete Novel]
                    td #[a(href="novels/" + i._id) link]