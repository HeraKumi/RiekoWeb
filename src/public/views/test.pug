extends layout

block content
    .page-header
        h1 #{title}
    .container
        h5 Post novel 
        p This is only to post a default already made to insert
    hr
    .container
        form(action="/test" method="POST")
            div.form-group
                label(for='name') Novel Name:
                input#name.form-control(type='text', placeholder='Novel Name' name='novelName')
                
            div.form-group
                label(for='name') Novel Summery:
                textarea(rows="5" name="novelSummary")
            
            div.form-group
                label(for='name') Novel Author:
                input#name.form-control(type='text', placeholder='Author name' name='novelAuthor')
            
            div.form-group
                label(for='name') Novel Cover Art:
                input#name.form-control(type='text', placeholder='http://something.com/image.png' name='novelArt')
            
            div.form-group
                label(for='name') Novel Tags:
                input#name.form-control(type='text', placeholder='Novel Summary' name='novelSummary')
            
            button.btn.btn-primary(type='submit') Save