// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": ["es7", "dom"],
        "outDir": "./dist",
        "baseUrl": "./src",
        //"noImplicitAny": true,
        "declaration": true,
        "paths": {
            "*": [
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "storage"
    ]
}